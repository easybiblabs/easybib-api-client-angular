{
  'env': {
    'browser': true,
    'mocha': true
  },
  'globals': {
    'angular': true,
    'require': true,
    'module': true,
    'inject': true,
    'expect': true,
    'sinon' : true,
  },
  'rules': {
    'complexity': [2, 7],
    'consistent-this': [0, 'self'],
    'default-case': 2,
    'handle-callback-err': 2,
    'no-console': 2,
    'no-else-return': 2,
    'no-extra-strict': 2,
    'no-floating-decimal': 2,
    'no-nested-ternary': 2,
    'no-self-compare': 2,
    'no-undefined': 2,
    'no-undefined': 2,
    'no-underscore-dangle': 0,
    'no-void': 2,
    'no-warning-comments': 1,
    'quotes': [2, 'single'],
    'radix': 2,
    'dot-notation': 0
  }
}
